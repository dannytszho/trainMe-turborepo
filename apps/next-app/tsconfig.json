{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "styles/globals.css"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".turbo"
  ]
}
